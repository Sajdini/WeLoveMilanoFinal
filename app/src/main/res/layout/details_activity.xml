<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/text_view_res_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Restaurant"
        android:textStyle="bold"
        android:textSize="24sp"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager_images"
        android:layout_width="300dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@id/text_view_res_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="10dp"
        app:layout_editor_absoluteX="16dp"/>

    <TextView
        android:id="@+id/text_view_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/view_pager_images"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Type"
        android:textSize="16dp"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/text_view_cuisine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_view_type"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Cuisine"
        android:textSize="16sp"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/text_view_cuisine_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_view_type"
        app:layout_constraintStart_toEndOf="@id/text_view_cuisine"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Cuisine"
        android:textSize="16sp"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/text_view_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_view_cuisine"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="Average cost for two"
        android:textSize="16sp"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/text_view_cost_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_view_cuisine"
        app:layout_constraintStart_toEndOf="@id/text_view_cost"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="0"
        android:textSize="16sp"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/text_view_timing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_view_cost"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="Working time"
        android:textSize="16sp"
        android:textStyle="italic"/>
    <TextView
        android:id="@+id/text_view_timing_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_view_cost"
        app:layout_constraintStart_toEndOf="@id/text_view_timing"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="Working Hours"
        android:textSize="16sp"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/text_view_adress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_view_timing"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="Adress:"
        android:textSize="16sp"
        android:textStyle="italic"/>


    <TextView
        android:id="@+id/text_view_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_view_adress"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="Phone No."
        android:textSize="16sp"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/text_view_phone_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_view_adress"
        app:layout_constraintStart_toEndOf="@id/text_view_phone"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="Phone"
        android:textSize="16sp"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/text_view_res_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_view_phone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Menu"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/horizontal_scroll_view_menu"
        android:layout_width="280dp"
        android:layout_height="180dp"
        app:layout_constraintTop_toBottomOf="@id/text_view_res_menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="10dp"
        app:layout_editor_absoluteX="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>